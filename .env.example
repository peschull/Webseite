# Environment Variables for CiviCRM n8n Integration

# CiviCRM Configuration
CIVICRM_BASE_URL=https://your-civicrm.example.com
CIVICRM_API_KEY=your_api_key_here
CIVICRM_SITE_KEY=your_site_key_here

# n8n Configuration
N8N_ENCRYPTION_KEY=your_32_character_encryption_key_here
N8N_DB_TYPE=postgres
N8N_DB_POSTGRESDB_HOST=localhost
N8N_DB_POSTGRESDB_DATABASE=n8n
N8N_DB_POSTGRESDB_USER=n8n_user
N8N_DB_POSTGRESDB_PASSWORD=secure_password
N8N_QUEUE_MODE=redis
N8N_REDIS_HOST=localhost
N8N_REDIS_PORT=6379
N8N_WEBHOOK_URL=https://your-n8n.example.com

# Binary Data Storage (S3/MinIO)
N8N_DEFAULT_BINARY_DATA_MODE=s3
N8N_BINARY_DATA_S3_BUCKET=n8n-binary-data
N8N_BINARY_DATA_S3_REGION=eu-central-1
N8N_BINARY_DATA_S3_ACCESS_KEY_ID=your_access_key
N8N_BINARY_DATA_S3_SECRET_ACCESS_KEY=your_secret_key
N8N_BINARY_DATA_S3_ENDPOINT=https://your-minio.example.com

# PDF Generation (CraftMyPDF)
CRAFTMYPDF_API_KEY=your_craftmypdf_api_key

# Email Configuration (Brevo)
BREVO_API_KEY=your_brevo_api_key
