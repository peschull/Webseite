  "personalization": {
    "member_data": {
      "first_name": "{{member_first_name}}",
      "last_name": "{{member_last_name}}",
      "membership_number": "{{member_number}}",
      "membership_start": "{{membership_start_date}}",
      "membership_type": "{{membership_type}}",
      "total_donations": "{{member_total_donations}}",
      "events_attended": "{{member_events_attended}}",
      "engagement_score": "{{member_engagement_score}}"
    },
    "dynamic_content": {
      "based_on_interests": true,
      "based_on_location": true,
      "based_on_engagement": true,
      "based_on_donation_history": true
    }
  },
  "responsive_settings": {
    "mobile_optimized": true,
    "tablet_optimized": true,
    "desktop_min_width": 600,
    "mobile_font_size_adjustment": 1.1,
    "mobile_padding_adjustment": 0.8
  },
  "accessibility": {
    "alt_text_required": true,
    "contrast_ratio_minimum": 4.5,
    "keyboard_navigation": true,
    "screen_reader_friendly": true
  },
  "testing": {
    "preview_urls": {
      "desktop": "https://preview.menschlichkeit.at/templates/newsletter/desktop",
