    "test_email_addresses": [
      "test@menschlichkeit.at",
      "preview@example.com"
    ]
  },
  "usage_instructions": {
    "setup": "1. Import template into Mosaico editor, 2. Configure content blocks, 3. Add dynamic content placeholders",
    "customization": "All content blocks can be edited via drag-and-drop interface. Use {{placeholder}} syntax for dynamic content.",
    "best_practices": "Keep subject lines under 50 characters, ensure mobile optimization, test across different email clients",
    "required_fields": ["newsletter_title", "issue_date", "unsubscribe_url"]
  }
}
