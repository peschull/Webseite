  "template_config": {
    "width": 600,
    "background_color": "#f8f9fa",
    "font_family": "Arial, sans-serif",
    "primary_color": "#007bff",
    "secondary_color": "#28a745",
    "accent_color": "#ffc107"
  },
  "content_blocks": [
    {
      "type": "header",
      "id": "header_block",
      "properties": {
        "background_color": "#007bff",
        "text_color": "#ffffff",
        "logo_url": "https://menschlichkeit.at/assets/logo-white.png",
        "logo_width": 150,
        "title": "{{newsletter_title}}",
        "subtitle": "{{newsletter_subtitle}}",
        "issue_date": "{{issue_date}}"
      },
      "content": {
        "editable": true,
        "placeholder": "Newsletter Titel"
      }
    },
    {
      "type": "hero_section",
      "id": "hero_block",
      "properties": {
        "background_image": "{{hero_image_url}}",
        "overlay_color": "rgba(0, 123, 255, 0.8)",
        "text_align": "center",
        "padding": "40px"
      },
      "content": {
        "headline": "{{hero_headline}}",
        "subheadline": "{{hero_subheadline}}",
        "cta_text": "{{hero_cta_text}}",
        "cta_url": "{{hero_cta_url}}",
        "editable": true
      }
    },
    {
      "type": "article_grid",
      "id": "articles_block",
      "properties": {
        "columns": 2,
        "gap": "20px",
        "background_color": "#ffffff"
      },
      "content": {
        "articles": [
          {
            "title": "{{article_1_title}}",
            "excerpt": "{{article_1_excerpt}}",
            "image": "{{article_1_image}}",
            "read_more_url": "{{article_1_url}}",
            "author": "{{article_1_author}}",
            "date": "{{article_1_date}}"
          },
          {
            "title": "{{article_2_title}}",
            "excerpt": "{{article_2_excerpt}}",
            "image": "{{article_2_image}}",
            "read_more_url": "{{article_2_url}}",
            "author": "{{article_2_author}}",
            "date": "{{article_2_date}}"
          }
        ],
        "editable": true
      }
    },
    {
      "type": "impact_stats",
      "id": "impact_block",
      "properties": {
        "background_color": "#e8f5e8",
        "border_color": "#28a745",
        "text_color": "#155724"
      },
      "content": {
        "title": "üåü Ihre Wirkung in Zahlen",
        "stats": [
          {
            "number": "{{projects_count}}",
            "label": "Unterst√ºtzte Projekte",
            "icon": "üè†"
          },
          {
            "number": "{{people_helped}}",
            "label": "Menschen geholfen",
            "icon": "üë•"
          },
          {
            "number": "{{donations_total}}‚Ç¨",
            "label": "Spenden gesammelt",
            "icon": "üí∞"
          },
          {
            "number": "{{members_count}}",
            "label": "Aktive Mitglieder",
            "icon": "‚ù§Ô∏è"
          }
        ],
        "editable": true
      }
    },
    {
      "type": "event_calendar",
      "id": "events_block",
      "properties": {
        "background_color": "#fff3cd",
        "border_color": "#ffc107"
      },
      "content": {
        "title": "üìÖ Kommende Veranstaltungen",
        "events": [
          {
            "title": "{{event_1_title}}",
            "date": "{{event_1_date}}",
            "time": "{{event_1_time}}",
            "location": "{{event_1_location}}",
            "type": "{{event_1_type}}",
            "registration_url": "{{event_1_registration_url}}",
            "members_only": true
          },
          {
            "title": "{{event_2_title}}",
            "date": "{{event_2_date}}",
            "time": "{{event_2_time}}",
            "location": "{{event_2_location}}",
            "type": "{{event_2_type}}",
            "registration_url": "{{event_2_registration_url}}",
            "members_only": false
          }
        ],
        "editable": true
      }
    },
    {
      "type": "testimonial",
      "id": "testimonial_block",
      "properties": {
        "background_color": "#f8f9fa",
        "text_align": "center",
        "border_style": "solid",
        "border_width": "1px",
        "border_color": "#dee2e6"
      },
      "content": {
        "quote": "{{testimonial_text}}",
        "author_name": "{{testimonial_author}}",
        "author_title": "{{testimonial_author_title}}",
        "author_image": "{{testimonial_author_image}}",
        "rating": "{{testimonial_rating}}",
